<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/app.css">
  {{#styles}}
  <link rel="stylesheet" href="{{{.}}}">
  {{/styles}}
</head>
<body class="wrapper">
<header>
  <h1>
    <a href="/index.html">{{siteTitle}}</a>
  </h1>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/pages/about">About</a></li>
    </ul>
  </nav>
</header>
<main>
  {{title}}
  {{{content}}}
  {{#pagination_exists}}
  <ul>
    {{#prevurl_exists}}
    <li><a href="{{prevurl}}">Page précédente</a></li>
    {{/prevurl_exists}}
    {{#nexturl_exists}}
      <li><a href="{{nexturl}}">Page suivante</a></li>
    {{/nexturl_exists}}
  </ul>
  {{/pagination_exists}}
</main>
<footer>
  <img src="/img/apollonet.png" width="70" height="71" alt="ApolloNet">
</footer>
{{#scripts}}
<script defer src="{{{.}}}"></script>
{{/scripts}}
<script defer src="/js/app.js"></script>
</body>
</html>