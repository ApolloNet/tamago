<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="{{{site.basepath}}}/css/app.css">
  {{#styles}}
  <link rel="stylesheet" href="{{{.}}}">
  {{/styles}}
</head>
<body class="wrapper">
<header>
  <h1>
    <a href="{{{site.basepath}}}/index.html">{{site.title}}</a>
  </h1>
  <nav>
    <ul>
      <li><a href="{{{site.basepath}}}/">Home</a></li>
      <li><a href="{{{site.basepath}}}/pages/about">About</a></li>
    </ul>
  </nav>
</header>
<main>
  {{title}}
  {{{content}}}
  {{#pagination_exists}}
  <ul>
    {{#prevurl_exists}}
    <li><a href="{{prevurl}}">Page précédente</a></li>
    {{/prevurl_exists}}
    {{#nexturl_exists}}
      <li><a href="{{nexturl}}">Page suivante</a></li>
    {{/nexturl_exists}}
  </ul>
  {{/pagination_exists}}
</main>
{{#scripts}}
<script defer src="{{{.}}}"></script>
{{/scripts}}
<script defer src="{{{site.basepath}}}/js/app.js"></script>
</body>
</html>